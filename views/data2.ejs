<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Document</title>
</head>

<body>

    
    <form action="/data2/filtered" method="get" id="filterform" name="filterform">
        <label for="surveySelect"><b>Select Survey:</b></label>
        <select id="surveySelect" name="surveySelect" onchange="loadSelectedSurvey()">
            <option>Select a Survey</option>
            <% for (let iCount = 0; iCount < surveySelections.length; iCount++) { %>
                <option value="<%= surveySelections[iCount].survey_number %>">
                Survey <%= surveySelections[iCount].survey_number %>
                </option>
            <% } %>
        </select>
        <input type="submit" value="Submit">
        <input type="button" value="Clear Selection" onclick="clearSelection()">
    </form>
    
    <script>
        function clearSelection() {
            // Redirect to /data2 route
            window.location.href = '/data2';
        }
    </script>
    </form>
   <br><br>
   <table style="width: 100%; background-color: antiquewhite; border: 1px solid black;">
     <thead style="background-color: cornflowerblue; color: white;">
       <tr>
         <th style="text-align: left;">Survey Number</th>
         <th style="text-align: left;">Time Stamp</th>
         <th style="text-align: left;">Location</th>
         <th style="text-align: left;">Age</th>
         <th style="text-align: left;">Gender</th>
         <th style="text-align: left;">Relationship Status</th>
         <th style="text-align: left;">Occupation Status</th>
         <th style="text-align: left;">Associated Organizations</th>
         <th style="text-align: left;">Media User</th>
         <th style="text-align: left;">Platform Name</th>
         <th style="text-align: left;">Hours on Media</th>
         <th style="text-align: left;">Use Media No Purpose</th>
         <th style="text-align: left;">Distracted by Media</th>
         <th style="text-align: left;">Restless Not Using Media</th>
         <th style="text-align: left;">Easily Distracted</th>
         <th style="text-align: left;">Bothered by Worries</th>
         <th style="text-align: left;">Concentration</th>
         <th style="text-align: left;">Compare to Others</th>
         <th style="text-align: left;">How Comparisson Feels</th>
         <th style="text-align: left;">Seek Validation</th>
         <th style="text-align: left;">Depression</th>
         <th style="text-align: left;">Interest Fluctuate</th>
         <th style="text-align: left;">General Sleep</th>
         <th></th>
         <th></th>
       </tr>
     </thead>
     <tbody style="font-family: Arial; font-size: 9pt;">
      <% for (let iCount = 0; iCount < mysurvey.length; iCount++) { %>
         <tr>
           
           <td><%= mysurvey[iCount].survey_number %></td>
           <td><%= mysurvey[iCount].timestamp %></td>
           <td><%= mysurvey[iCount].location %></td>
           <td><%= mysurvey[iCount].age %></td>
           <td><%= mysurvey[iCount].gender %></td>
           <td><%= mysurvey[iCount].relationship_status %></td>
           <td><%= mysurvey[iCount].occupation_status %></td>
           <td><%= mysurvey[iCount].organization_type %></td>
           <td><%= mysurvey[iCount].media_user %></td>
           <td><%= mysurvey[iCount].platform_name %></td>
           <td><%= mysurvey[iCount].hours_on_media %></td>
           <td><%= mysurvey[iCount].use_media_no_purpose %></td>
           <td><%= mysurvey[iCount].distracted_by_media %></td>
           <td><%= mysurvey[iCount].restless_not_using_media %></td>
           <td><%= mysurvey[iCount].easily_distracted %></td>
           <td><%= mysurvey[iCount].bothered_by_worries %></td>
           <td><%= mysurvey[iCount].concentration %></td>
           <td><%= mysurvey[iCount].compare_to_others %></td>
           <td><%= mysurvey[iCount].how_comparisson_feels %></td>
           <td><%= mysurvey[iCount].seek_validation %></td>
           <td><%= mysurvey[iCount].depression %></td>
           <td><%= mysurvey[iCount].interest_fluctuate %></td>
           <td><%= mysurvey[iCount].general_sleep %></td>
         </tr>
      <% } %>
     </tbody>
   </table>
   <br><br>
</body>
</html>